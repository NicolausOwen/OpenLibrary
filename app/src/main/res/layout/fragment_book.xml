<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FAFAFA"> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_pink_gradient"
        android:padding="20dp"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/tvGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi, Reader"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvSubGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's read a book today"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:alpha="0.95"
            android:layout_marginBottom="20dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvSearchTrigger"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="25dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="18dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_search_pink"
                    app:tint="#999999"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Search for book or e-library"
                    android:textColor="#999999"
                    android:layout_marginStart="12dp"
                    android:textSize="14sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue Reading"
            android:textStyle="bold"
            android:textSize="19sp"
            android:textColor="#E91E63"
            android:layout_marginBottom="14dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardContinueReading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp"
            android:layout_marginBottom="28dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <ImageView
                        android:id="@+id/imgContinueCover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_upcoming"
                        android:scaleType="centerCrop"
                        android:background="#FFF9C4"/>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="16dp"
                    android:paddingEnd="0dp"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvContinueTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="FILOSOFI TERAS"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="6dp"/>

                    <TextView
                        android:id="@+id/tvContinueDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lebih dari 2.000 tahun lalu, sebuah mazhab filsafat menemukan akar masalah juga juga solusi dari banyak emosi negatif. Stoicisme, atau Filosofi..."
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:lineSpacingMultiplier="1.3"
                        android:maxLines="4"
                        android:ellipsize="end"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="#E91E63"
            android:layout_marginBottom="14dp"/>

        <GridLayout
            android:id="@+id/categoryGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:layout_marginBottom="28dp">

            <LinearLayout
                android:id="@+id/cat_action"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <androidx.cardview.widget.CardView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:backgroundTint="#FFF0F0"> <ImageView
                    android:src="@drawable/ic_popular"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    app:tint="#E91E63"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:text="Action &amp;\nAdventure"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:textColor="#333333"
                    android:lineSpacingMultiplier="1.2"
                    android:maxLines="2"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cat_antiques"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <androidx.cardview.widget.CardView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:backgroundTint="#FFE8E8">
                    <ImageView
                        android:src="@drawable/ic_popular"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        app:tint="#FF6B9D"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:text="Antiques &amp;\nCollectibles"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:textColor="#333333"
                    android:lineSpacingMultiplier="1.2"
                    android:maxLines="2"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cat_business"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <androidx.cardview.widget.CardView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:backgroundTint="#FFF5E6"> <ImageView
                    android:src="@drawable/ic_popular"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    app:tint="#FFB74D"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:text="Business &amp;\nEconomics"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:textColor="#333333"
                    android:lineSpacingMultiplier="1.2"
                    android:maxLines="2"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cat_computer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <androidx.cardview.widget.CardView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:backgroundTint="#E3F2FD"> <ImageView
                    android:src="@drawable/ic_popular"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    app:tint="#42A5F5"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:text="Computer"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:textColor="#333333"
                    android:lineSpacingMultiplier="1.2"
                    android:maxLines="2"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cat_design"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <androidx.cardview.widget.CardView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:backgroundTint="#F3E5F5"> <ImageView
                    android:src="@drawable/ic_popular"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    app:tint="#AB47BC"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:text="Design"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:textColor="#333333"
                    android:lineSpacingMultiplier="1.2"
                    android:maxLines="2"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cat_education"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <androidx.cardview.widget.CardView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:backgroundTint="#FFCCBC"> <ImageView
                    android:src="@drawable/ic_popular"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    app:tint="#FF7043"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:text="Education"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:textColor="#333333"
                    android:lineSpacingMultiplier="1.2"
                    android:maxLines="2"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cat_fiction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <androidx.cardview.widget.CardView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:backgroundTint="#FCE4EC"> <ImageView
                    android:src="@drawable/ic_popular"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    app:tint="#EC407A"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:text="Fiction"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:textColor="#333333"
                    android:lineSpacingMultiplier="1.2"
                    android:maxLines="2"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cat_see_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <androidx.cardview.widget.CardView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:backgroundTint="#F3E5F5"> <ImageView
                    android:src="@drawable/ic_popular"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    app:tint="#AB47BC"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:text="See All"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:textColor="#333333"
                    android:lineSpacingMultiplier="1.2"
                    android:maxLines="2"/>
            </LinearLayout>

        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recommendation"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="#E91E63"
            android:layout_marginBottom="14dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvBooksHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clipToPadding="false"
            android:paddingBottom="80dp"/>

    </LinearLayout>
</LinearLayout>
</ScrollView>