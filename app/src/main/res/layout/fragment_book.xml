<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- =========================
             HEADER WITH GRADIENT PINK
        ========================== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gradient_pink_header"
            android:padding="16dp"
            android:paddingBottom="20dp">

            <!-- Status Bar Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginBottom="8dp">

            </LinearLayout>

            <!-- Greeting -->
            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi, Emir"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/tvSubGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let's read a book today"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:alpha="0.9"
                android:layout_marginBottom="16dp"/>

            <!-- Search Bar -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="24dp">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/searchView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:queryHint="Search for book or e-library"
                    android:iconifiedByDefault="false"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- =========================
             CONTENT SECTION
        ========================== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- =========================
                 CONTINUE READING
            ========================== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue Reading"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#E91E63"
                android:layout_marginBottom="12dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardContinueReading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgContinueCover"
                        android:layout_width="80dp"
                        android:layout_height="110dp"
                        android:src="@drawable/ic_upcoming"
                        android:scaleType="centerCrop"
                        android:background="#FFF9C4"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="12dp"
                        android:paddingEnd="0dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvContinueTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="FILOSOFI TERAS"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvContinueDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lebih dari 2.000 tahun lalu, sebuah mazhab filsafat menemukan akar masalah dan juga solusi dari banyak emosi negatif. Stoalisme, atau Filosofi ..."
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:maxLines="4"
                            android:ellipsize="end"
                            android:lineSpacingExtra="2dp"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- =========================
                 CATEGORY
            ========================== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#E91E63"
                android:layout_marginBottom="12dp"/>

            <!-- Category Grid - 2 Rows only -->
            <GridLayout
                android:id="@+id/categoryGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:layout_marginBottom="24dp">

                <!-- Row 1 -->
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">
                    <ImageView
                        android:src="@drawable/ic_popular"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:backgroundTint="#FFE4E1"
                        android:padding="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Actions &amp;\nAdventure"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:textColor="#333333"
                        android:maxLines="2"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">
                    <ImageView
                        android:src="@drawable/ic_popular"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:backgroundTint="#FFD4D4"
                        android:padding="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Antiques &amp;\nCollectibles"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:textColor="#333333"
                        android:maxLines="2"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">
                    <ImageView
                        android:src="@drawable/ic_popular"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:backgroundTint="#D4F1D4"
                        android:padding="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Business &amp;\nEconomics"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:textColor="#333333"
                        android:maxLines="2"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">
                    <ImageView
                        android:src="@drawable/ic_popular"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:backgroundTint="#ADD8E6"
                        android:padding="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Computer"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:textColor="#333333"
                        android:maxLines="2"/>
                </LinearLayout>

                <!-- Row 2 -->
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">
                    <ImageView
                        android:src="@drawable/ic_popular"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:backgroundTint="#FFD4E5"
                        android:padding="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Family &amp;\nRelationship"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:textColor="#333333"
                        android:maxLines="2"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">
                    <ImageView
                        android:src="@drawable/ic_popular"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:backgroundTint="#FFE4E1"
                        android:padding="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fiction"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:textColor="#333333"
                        android:maxLines="2"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">
                    <ImageView
                        android:src="@drawable/ic_popular"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:backgroundTint="#FFDAB9"
                        android:padding="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Engineering"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:textColor="#333333"
                        android:maxLines="2"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">
                    <ImageView
                        android:src="@drawable/ic_popular"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:backgroundTint="#FFE4E1"
                        android:padding="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See All"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:textColor="#333333"
                        android:maxLines="2"/>
                </LinearLayout>

            </GridLayout>

            <!-- =========================
                 RECOMMENDATION
            ========================== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recommendation"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#E91E63"
                android:layout_marginBottom="12dp"/>

            <!-- Horizontal RecyclerView for Books -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvBooksHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clipToPadding="false"
                android:paddingBottom="80dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>