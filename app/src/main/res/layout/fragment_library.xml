<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Library Title -->
        <TextView
            android:text="Library"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#E91E63"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- TAB -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- FAVORITES TAB -->
            <LinearLayout
                android:id="@+id/layoutFavoritesTab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvFavoritesTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Favorites"
                    android:textColor="#E91E63"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingBottom="6dp" />

                <!-- ACTIVE INDICATOR -->
                <View
                    android:id="@+id/indicatorFavorites"
                    android:layout_width="40dp"
                    android:layout_height="2dp"
                    android:background="#E91E63"
                    android:visibility="visible" />
            </LinearLayout>

            <!-- HISTORY TAB -->
            <LinearLayout
                android:id="@+id/layoutHistoryTab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvHistoryTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="History"
                    android:textColor="#999999"
                    android:textSize="14sp"
                    android:paddingBottom="6dp" />

                <!-- ACTIVE INDICATOR -->
                <View
                    android:id="@+id/indicatorHistory"
                    android:layout_width="40dp"
                    android:layout_height="2dp"
                    android:background="#E91E63"
                    android:visibility="invisible" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- CONTENT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Count + Filter -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvBooksCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0 Books"
                android:textSize="14sp"
                android:textColor="#666666" />

            <ImageView
                android:id="@+id/ivFilter"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                app:tint="#666666"/>
        </LinearLayout>

        <!-- FAVORITES LIST -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFavorites"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="16dp"/>

        <!-- HISTORY LIST -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHistory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="16dp"
            android:visibility="gone" />

        <!-- EMPTY FAVORITES -->
        <TextView
            android:id="@+id/tvEmptyFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No favorites yet."
            android:textSize="14sp"
            android:textColor="#999999"
            android:layout_gravity="center"
            android:layout_marginTop="48dp"
            android:visibility="gone"/>

        <!-- EMPTY HISTORY -->
        <TextView
            android:id="@+id/tvEmptyHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No reading history."
            android:textSize="14sp"
            android:textColor="#999999"
            android:layout_gravity="center"
            android:layout_marginTop="48dp"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>
