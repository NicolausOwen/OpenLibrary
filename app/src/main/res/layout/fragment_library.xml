<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="32dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="12dp">

        <!-- Library Title -->
        <TextView
            android:text="Library"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#E91E63"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- TAB -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- FAVORITES TAB -->
            <LinearLayout
                android:id="@+id/layoutFavoritesTab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/tvFavoritesTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Favorites"
                    android:textColor="#E91E63"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:paddingBottom="8dp"
                    android:clickable="false"
                    android:focusable="false" />

                <!-- ACTIVE INDICATOR -->
                <View
                    android:id="@+id/indicatorFavorites"
                    android:layout_width="50dp"
                    android:layout_height="3dp"
                    android:background="#E91E63"
                    android:visibility="visible" />
            </LinearLayout>

            <!-- HISTORY TAB -->
            <LinearLayout
                android:id="@+id/layoutHistoryTab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/tvHistoryTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="History"
                    android:textColor="#999999"
                    android:textSize="15sp"
                    android:paddingBottom="8dp"
                    android:clickable="false"
                    android:focusable="false" />

                <!-- ACTIVE INDICATOR -->
                <View
                    android:id="@+id/indicatorHistory"
                    android:layout_width="50dp"
                    android:layout_height="3dp"
                    android:background="#E91E63"
                    android:visibility="invisible" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F0"/>

    <!-- CONTENT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp">

        <!-- Count + Filter -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvBooksCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0 Books"
                android:textSize="14sp"
                android:textColor="#666666"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivFilter"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#666666"/>
        </LinearLayout>

        <!-- Content Container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- FAVORITES LIST -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFavorites"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="20dp"/>

            <!-- HISTORY LIST -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvHistory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="20dp"
                android:visibility="gone" />

            <!-- EMPTY FAVORITES -->
            <TextView
                android:id="@+id/tvEmptyFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No favorites yet."
                android:textSize="14sp"
                android:textColor="#999999"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <!-- EMPTY HISTORY -->
            <TextView
                android:id="@+id/tvEmptyHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No reading history."
                android:textSize="14sp"
                android:textColor="#999999"
                android:layout_gravity="center"
                android:visibility="gone"/>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>